#!/usr/bin/env python3
"""sigil launcher â€” drop this on your PATH or symlink it.

Automatically finds the sigil package relative to this script,
so it works from any working directory.

Setup (pick one):
  1. Symlink:  ln -s /path/to/sigil/sg ~/.local/bin/sigil
  2. Copy:     cp cm ~/.local/bin/sigil && chmod +x ~/.local/bin/sigil
  3. Alias:    alias sigil='python3 /path/to/sigil/sg'
"""

import sys
from pathlib import Path

# Add the repo root (parent of this script) to sys.path so 'sigil' is importable
script_dir = Path(__file__).resolve().parent.parent
# print(script_dir) # Debug: show the resolved script directory
if str(script_dir) not in sys.path:
    sys.path.insert(0, str(script_dir))

from sigil.cli import main  # type: ignore # noqa: E402

main()
