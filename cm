#!/usr/bin/env python3
"""codemark launcher â€” drop this on your PATH or symlink it.

Automatically finds the codemark package relative to this script,
so it works from any working directory.

Setup (pick one):
  1. Symlink:  ln -s /path/to/codemark/cm ~/.local/bin/codemark
  2. Copy:     cp cm ~/.local/bin/codemark && chmod +x ~/.local/bin/codemark
  3. Alias:    alias codemark='python3 /path/to/codemark/cm'
"""

import sys
from pathlib import Path

# Add the repo root (parent of this script) to sys.path so 'codemark' is importable
script_dir = Path(__file__).resolve().parent.parent
# print(script_dir) # Debug: show the resolved script directory
if str(script_dir) not in sys.path:
    sys.path.insert(0, str(script_dir))

from codemark.cli import main  # type: ignore # noqa: E402

main()
